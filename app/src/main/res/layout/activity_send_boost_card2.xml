<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.android.carlosmartin.offimate.activities.coworkers.SendBoostCard2Activity">

    <LinearLayout
        android:id="@+id/boostCardMessageHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/coworkerProfileImageView"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@color/passion"
                app:srcCompat="@drawable/ic_action_passion" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/coworkerProfileNameTextView"
                    android:text="Manages ambiguity"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/coworkerProfileEmailTextView"
                    android:text="to: Daniel Martin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/boostCardMessageBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/boostCardMessageHeader">

        <EditText
            android:id="@+id/boostCardEditText"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed suscipit ligula in ornare rhoncus. Aenean dignissim, sapien in sagittis consequat, lectus lacus laoreet neque, eget sollicitudin ipsum mauris id mi. Integer tincidunt neque leo, fermentum interdum turpis dapibus ultricies. Integer pharetra tortor vel fringilla ultrices."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:inputType="textMultiLine" />
    </RelativeLayout>

</RelativeLayout>
